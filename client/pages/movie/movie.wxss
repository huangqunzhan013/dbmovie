/* pages/movie/movie.wxss */
.content{
  background-color: #fff;
  min-height: 100%;
}
.movie{
  display: flex;
  flex-direction: row;
  border: 1px solid #ccc;
  margin: 5px 3px;
  box-shadow: 0 2px 5px #ccc;
  background-color: #666;
}
.pic image{
  width: 80px;
  height: 130px;
}
.movie-info{
  padding-left: 20px;
}
.base-info{
  color: #fff;
  font-size: 12px;
  padding-top: 20px;
  line-height: 20px;
}
.banner{
  width: 100%;
  height: auto;
  display: block;
}
.slide-image{
  width: 100%;
  display: block;
}
.scroll{
  width: 100%;
}
.loading-view{
  text-align: center;
  margin-bottom: 40rpx;
}
.loading-view .loading-img{
  width: 32px;
  height: 32px;
}
.loading-view .no-data{
  color: #666;
  font-size: 28rpx;
}